(function($) {
  $('#most-lists .list-wrapper h3, #recommended-list, #recommended-list-period').addClass('hidden');
  $('#commented, #recommended').addClass('show');
  $('#commented, #recommended').removeClass('hidden');

  $('div#commented').click(function(){
    $('#commented-list, #commented-list-period').attr('class', 'show');
    $('#recommended-list, #recommended-list-period').attr('class', 'hidden');
    $('#commented').addClass('active');
    $('#recommended').removeClass('active');
  });

  $('#recommended').click(function(){
    $('#recommended-list, #recommended-list-period').attr('class', 'show');
    $('#commented-list, #commented-list-period').attr('class', 'hidden');
    $('#recommended').addClass('active');
    $('#commented').removeClass('active');
  });
})(jQuery);
</script><div class="ec-ads ec-ads-remove-if-empty"><p>Advertisement</p><!-- Site: Web.  Zone: misc | Articles --> <script language="JavaScript" type="text/javascript">document.write('<script language="JavaScript" src="http://ad.doubleclick.net/adj/teg.fmsq/none/a;subs=n;wsub=n;!c=17722932;pos=mpu_bottom;sz=300x250,50x50;tile=8;ord=' + random_ad_nr + '?" type="text/javascript"><\/script>')</script><noscript><a href="http://ad.doubleclick.net/jump/teg.fmsq/none/a;subs=n;wsub=n;!c=17722932;pos=mpu_bottom;sz=300x250,50x50;tile=8;ord=812189771?"><img src="http://ad.doubleclick.net/ad/teg.fmsq/none/a;subs=n;wsub=n;!c=17722932;pos=mpu_bottom;sz=300x250,50x50;tile=8;ord=812189771?" width="300" height="250" border="0" alt=""></a></noscript></div><div id="block-ec_blogs-ec_blogs_block_recent" class="block block-ec_blogs">
