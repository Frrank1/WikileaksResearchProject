<script type="text/javascript">
/* <![CDATA[ */




    if (deconcept.SWFObjectUtil.getPlayerVersion().major == 0) {

        var loadAttempts = 0;
        var maxLoadAttempts = 10;
        var reloadTimeout = 250;

        var player;

        function debug(msg) {
            if (false) {
                alert(msg);
            }
        }

        // events don't fire on the ipad
        function watchDog() {
            var p = player;
            debug('running' + p);
            debug('running' + p.error);
            if (p.error && loadAttempts < maxLoadAttempts) {
                debug('error detected' + p.error.code);
                loadAttempts = loadAttempts + 1;
                reloadTimeout = reloadTimeout * 2;
                p.load();
            }
            setTimeout(watchDog, reloadTimeout);
        }

        function canPlayHtml5() {
            var v = document.createElement('video');
            return !!v.canPlayType && v.canPlayType('video/mp4; codecs="avc1.42E01E, mp4a.40.2"');
        }

        function createPlayer(url) {
            player = document.createElement('video');
            player.src = url;
            player.controls = true;
            // perhaps this breaks ipad?
            //player.poster = 'http://www.democracynow.org/images/dntv.jpeg';
            player.width = 448;
            player.height= 336;
            player.load();
            $j('#swfplayer').replaceWith($j("<div style='text-align: center'></div>").append(player));
        }

        $j(function () {
            if (canPlayHtml5()) {
                createPlayer('http://publish.dvlabs.com/democracynow/flash9/ye10-amy2.mp4');
                setTimeout(watchDog, reloadTimeout);
            }
        });

    }
    else {
        var so = new SWFObject('/images/player.swf','flash_player_swfplayer','448','356','9.0.115');
        so.addParam("allowfullscreen","true");
        so.addVariable("skin","/images/noskip.swf");
        so.addParam("wmode", "transparent");
        so.addVariable("autostart","false");
        so.addVariable("bufferlength","4");
        so.addVariable("quality","high");
        so.addVariable("item",0);
        so.addVariable("repeat","list");
        so.addVariable("streamer","lighttpd");
        so.addVariable("image", "/images/dntv.jpeg");
        so.write('swfplayer');
    }


    var player_swfplayer;
    var playlist_swfplayer;
    var current_time_swfplayer;
    var donate_tripped_swfplayer;
    var state_swfplayer;
    var initialized_swfplayer = false;
    var completed_swfplayer = false;

	function create_player_swfplayer(p, pl) {
      if (initialized_swfplayer) {
        // already initialised
        return;
      }
	  player_swfplayer = p;
      playlist_swfplayer = pl;

      // only show the pre roll once a day
      if (pl[0]['preroll'] && !first_visit_today('preroll')) {
          pl.splice(0,1);
      }

	  current_item_swfplayer = -1;
	  donate_tripped_swfplayer = false;
	  state_swfplayer = 'IDLE';

      p.sendEvent('LOAD', pl);
      p.addViewListener("PLAY", "play_listener_swfplayer");
      p.addModelListener("TIME", "time_listener_swfplayer");
      p.addModelListener("STATE", "complete_listener_swfplayer");
      p.addControllerListener("ITEM", "item_listener_swfplayer");

      if (window.clicky) {
        p.addViewListener("PLAY", "clicky_first_play_listener_swfplayer");
        p.addViewListener("NEXT", "clicky_next_listener_swfplayer");
        p.addViewListener("PREV", "clicky_prev_listener_swfplayer");
        p.addControllerListener("PLAY", "clicky_play_listener_swfplayer");
        p.addControllerListener("SEEK", "clicky_seek_listener_swfplayer");
        p.addControllerListener("STOP", "clicky_stop_listener_swfplayer");
        p.addModelListener("STATE", "clicky_state_listener_swfplayer");
      }
      initialized_swfplayer = true;
	}


  function clicky_first_play_listener_swfplayer(obj) {
    var cfg = player_swfplayer.getConfig();
    if (cfg.state == 'IDLE') {
        var index = cfg.item == -1 ? 0 : cfg.item;
        completed_swfplayer = false;
        clicky_notifyer_swfplayer('play', index, 0);
    }
  }

  function clicky_play_listener_swfplayer(obj) {
    var state = player_swfplayer.getConfig().state;
    if (state == 'PLAYING') {
        clicky_notifyer_swfplayer('play');
    }
    else if (state == 'PAUSED'){
        clicky_notifyer_swfplayer('pause');
    }
  }

  function clicky_stop_listener_swfplayer(obj) {
    clicky_notifyer_swfplayer('pause');
  }

  function clicky_state_listener_swfplayer(obj) {
    if (video_completed_swfplayer(obj.newstate)) {
        clicky_notifyer_swfplayer('end');
        completed_swfplayer = true;        
    }
  }

  function clicky_seek_listener_swfplayer(obj) {
    clicky_notifyer_swfplayer('seek');
  }

  function clicky_next_listener_swfplayer(obj) {
    var item = player_swfplayer.getConfig().item;
    clicky_notifyer_swfplayer('pause', item)
    clicky_notifyer_swfplayer('play', item+1, 0)
  }

  function clicky_prev_listener_swfplayer(obj) {
    var item = player_swfplayer.getConfig().item;
    clicky_notifyer_swfplayer('pause', item)
    clicky_notifyer_swfplayer('play', item-1, 0)
  }

  function clicky_notifyer_swfplayer(event, item_index, pos) {
    if (pos == undefined) {
        pos = current_time_swfplayer;
    }
    if (item_index == undefined) {
        item_index = current_item_swfplayer;
    }

    // fencepost
    var items = playlist_swfplayer.length; 
    if (item_index < 0) {
        item_index = items + item_index;
    }
    if (item_index >= items) {
        item_index = item_index - items;
    }
    //console.log('event:' + event + ' index: ' + item_index + ' pos:' + pos + ' completed:' + completed_swfplayer);
    var item = playlist_swfplayer[item_index];
    if (item && window.clicky && !completed_swfplayer) {
      var url = item.file + "?start=" + item.start;
      clicky.video(event, pos, url, item.title);
    }
  }

  function item_listener_swfplayer(obj) {
    current_item_swfplayer = obj.index;
  }

  function time_listener_swfplayer(obj) {
    var item = playlist_swfplayer[current_item_swfplayer];
    var start = item ? item.start : 0;
    current_time_swfplayer = obj.position - start;
    trip_donate_link_swfplayer();
  }

  function play_listener_swfplayer(obj) {
    var item = playlist_swfplayer[0];
    if (item['preroll']) {
        createCookie('preroll','seen it', 1);
    }
  }

  function complete_listener_swfplayer(obj) {
    if (video_completed_swfplayer(obj.newstate)) {
      setTimeout(function() {
        player_swfplayer.sendEvent("STOP");
      }, 100);
    }
  }


  function video_completed_swfplayer(state) {
    // prevent the player looping back to 1st story when viewing the whole show
    var is_pre_roll_item = true && current_item_swfplayer == 0;
    return (!is_pre_roll_item && state == "COMPLETED");
  }
  
  function trip_donate_link_swfplayer() {
    // update the donate button to reflect campaign 
    // if they watch the pre-roll
    if (true && current_item_swfplayer == 0 && !donate_tripped_swfplayer) {
      var db = document.getElementById('donate_link');
      if (db) {
        db.href = '/donate/121610P';
        donate_tripped_swfplayer = true;
      }
    }
  }

  var player_array;
  if (player_array == undefined) {
    player_array = new Array();
  }
  player_array['swfplayer'] = function() { create_player_swfplayer(document.getElementById('flash_player_swfplayer'), [{"type":"video/x-m4v","file":"http://publish.dvlabs.com/democracynow/flash9/ye10-amy2.mp4","image":"/images/dntv.jpeg","preroll":true,"title":"Fundraising","start":0},{"type":"video/x-m4v","file":"http://publish.dvlabs.com/democracynow/flash9/dn2010-1022.mp4","image":"/images/dntv.jpeg","duration":1880.0,"title":"October 22, 2010 - EXCLUSIVE: WikiLeaks Prepares Largest Intel Leak in US History with Release of 400,000 Iraq War Docs","start":653.0}]); };
  function playerReady(obj) {
    for (var player in player_array) {
        player_array[player]();
    }
  };
/* ]]> */
</script>

