    <script type="text/javascript">
    $(document).ready(function() {
      $('#pop-art-day').show();
      $('#pop-art-week').hide();
      $('#pop-comm-day').hide();
      $('#pop-comm-week').hide();
      $('.popreadweek').click(function() {
          $('#pop-art-day').hide();
          $('#pop-comm-week').hide();
          $('#pop-art-week').show();
          return false;
      });
      $('.popreadday').click(function() {
          $('#pop-art-week').hide();
          $('#pop-comm-day').hide();
          $('#pop-art-day').show();
          return false;
      });
      $('.popcommweek').click(function() {
          $('#pop-comm-day').hide();
          $('#pop-art-week').hide();
          $('#pop-comm-week').show();
          return false;
      });
      $('.popcommday').click(function() {
          $('#pop-comm-week').hide();
          $('#pop-art-day').hide();
          $('#pop-comm-day').show();
          return false;
       });
       //newsletter singup
       $('#newsletter-signup').submit(function(){
       $('.email_warning').empty();
       $('#newsletter-signup .existing').empty();
       $('#newsletter-signup .failure').empty();
       $('#newsletter-signup .failure_warnings').empty();
       $('#newsletter-signup li#success').hide();
       $('#newsletter-signup #submit').append('<div class="submitting">Submitting your details...</div>');
           if($('#newsletter-signup input#EmailAddress').val().length == 0){
                  $('.email_warning').append("<p class='failure'>Please enter your email address</p>");
                  $('#newsletter-signup .submitting').hide();
                  return false;
              }
         var this_element = $(this);
         var form_data = this_element.serialize();
         if(form_data.indexOf("Email") == -1){
          form_data =  'EmailAddress='+$('#newsletter-signup input#EmailAddress').val()+'&'+form_data;
         }
         $.ajax({type: "POST",
                  url: "/newsletter/signup/index.php",
                   data: form_data,
                   success: function(data) {
                     $('#newsletter-signup .submitting').hide();
                     $('#newsletter-signup ol').append(data)
                   }
                 });
           return false;
       });
                     // Value Click Retargetting with timestamp as CACHEBUSTER
